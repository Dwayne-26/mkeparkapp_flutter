rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: current user owns the doc?
    function isOwner(ownerId) {
      return request.auth != null && request.auth.uid == ownerId;
    }

    // User profiles — only owner
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Public-ish city data (alerts/feed) — authenticated read, restricted write
    match /alerts/{alertId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null
                            && request.resource.data.timestamp == request.time;
      allow delete: if false;  // or only admins
    }

    // User reports/sightings — owner can edit
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.reporterId == request.auth.uid;
      allow update, delete: if resource.data.reporterId == request.auth.uid;
    }

    // Log events, push permissions, etc. — authenticated only
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
